---
import Schedule from "../content/info/Schedule.md"
---

<section>
  <div class="alert alert-success">
    <div class="row">
      <div class="col-md-4">
        <div class="card h-100">
          <div class="card-body d-flex flex-column">
            <img class="img-fluid d-block my-auto" src=`/logo.jpg` alt="Logo">
          </div>
        </div>
      </div>
      <div class="col-md-8">
        <div class="card h-100">
          <div class="card-header">
            <p class="lead card-title text-center">Dr. Debasis Maity is Practicing Urology at:</p>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <Schedule />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const tables = document.querySelectorAll('table');
    tables.forEach((table) => {
      table.classList.add('table');
    });
  });
</script>
